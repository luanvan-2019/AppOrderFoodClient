<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:orientation="vertical"
        android:id="@+id/parent_layout">

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginLeft="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageRes"
                        android:src="@drawable/pexel"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="4dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp">

                        <TextView
                            android:id="@+id/txtName_Res"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#262628"
                            android:fontFamily="@font/robotoregular"
                            android:text="Đồ ăn đêm food Sài gòn"/>

                        <TextView
                            android:id="@+id/txtAddress_Res"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="11.5sp"
                            android:textColor="#9b9b9b"
                            android:fontFamily="@font/robotoregular"
                            android:text="264 Bùi Thị Xuân,phường 3,quận Tân Bình"
                            android:layout_marginTop="4dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:gravity="right"
                                android:id="@+id/txtkm"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:textSize="15sp"
                                android:fontFamily="@font/robotoregular"
                                android:textColor="#d22532"
                                android:text="3km"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
